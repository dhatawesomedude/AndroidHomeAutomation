<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:text="NFC Activity started" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="2"
        android:orientation="horizontal"
        android:id="@+id/ui_grid"
        android:paddingRight="15dp"
        >

        <Button
            android:layout_width="169dp"
            android:layout_height="123dp"
            android:text="Devices"
            android:id="@+id/devices"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#D8D8D8"
            android:textSize="25dp"
            android:background="@drawable/content_dropshadow"/>

        <Button
            android:layout_width="169dp"
            android:layout_height="123dp"
            android:id="@+id/light"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Lights"
            android:textColor="#D8D8D8"
            android:textSize="25dp"
            android:background="@drawable/content_dropshadow"/>

        <Button
            android:layout_width="357dp"
            android:layout_height="123dp"
            android:text="Alarm System"
            android:id="@+id/alarm_system"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_columnSpan="2"
            android:hint="check alarm system status"
            android:textColor="#D8D8D8"
            android:textSize="25dp"
            android:background="@drawable/content_dropshadow"/>

        <Button
            android:layout_width="169dp"
            android:layout_height="123dp"
            android:text="Movies"
            android:id="@+id/movie_button"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#D8D8D8"
            android:textSize="25dp"
            android:background="@drawable/content_dropshadow"/>

        <Button
            android:layout_width="169dp"
            android:layout_height="123dp"
            android:text="Music"
            android:id="@+id/music_button"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#D8D8D8"
            android:textSize="25dp"
            android:background="@drawable/content_dropshadow"/>

    </GridLayout>
</LinearLayout>